{
	"name": "Alpine",
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
	"postCreateCommand": ".devcontainer/postCreateCommand",
	"customizations": {
		"vscode": {
			"extensions": [
				"anysphere.cpptools",
				"llvm-vs-code-extensions.vscode-clangd"
			]
		}
	},
	"capAdd": [
		"SYS_RESOURCE",
		"BPF",
		"NET_ADMIN",
		"PERFMON",
		"SYS_ADMIN",
		"SYS_CHROOT"
	],
	"securityOpt": [
		"apparmor=unconfined"
	]
}